<div id="conversations">
  <h1>Conversations</h1>
    <% if @existing_chats_users.length > 0 %>
      <ul>
        <% @existing_chats_users.each do |other_user| %>
          <% if other_user != current_user %>
            <li>
              <%= link_to(user_chats_path(current_user, :other_user => other_user.id), method: :post) do %>
                <%= other_user.name %>
              <% end %>
            </li>
          <% end %>
        <% end %>
      </ul>
    <% else %>
      <p>No Active Chats</p>
    <% end %>

  <h1>Friends List</h1>
  <ul>
    <%= render @other_users %>
  </ul>
</div>